<Window x:Class="RecordSocialServicesProvision.WindowAuthentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecordSocialServicesProvision"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="450" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"  FontFamily="{StaticResource BasicFont}" Icon="/res/icon/MainIcon.png" FontSize="16" >

    <Grid Background="#FFFAFAFA">
        <TextBlock HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" Text="Войти" VerticalAlignment="Top" 
                 Style="{StaticResource BasicTextStyle}"
                 FontSize="40"
                 />
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="0,154,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="300"
                 Style="{StaticResource AdditionalTextStyle}"
                 FontSize="30"
                 TextAlignment="Center" 
                 Background="White" BorderBrush="#FF9E9EA0"
                 />
        <TextBox x:Name="Password" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Пароль"  VerticalAlignment="Top" Width="300"
                 Style="{StaticResource AdditionalTextStyle}"
                 FontSize="30"
                 TextAlignment="Center" 
                 Background="White" 
                 BorderBrush="#FF9E9EA0" Margin="0,205,0,0"
                 />
        <Button x:Name="ButtonAuthentication" Style="{DynamicResource StyleButtonAuthorisation}" Height="50" Content="Вход" HorizontalAlignment="Center" Margin="0,268,0,0" VerticalAlignment="Top" 
                 FontSize="30"
                 Background="{StaticResource BasicButtonColor}" Width="160" 
                 Click="ButtonAuthentication_Click"/>
        <TextBlock x:Name="TextError"  HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" 
                 Style="{StaticResource ErrorTextStyle}"
                 FontSize="16"/>

    </Grid>
</Window>
